# Database
DATABASE_URL="postgresql://chal_user:password@localhost:5432/chal_no?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Redis (可选)
REDIS_URL="redis://localhost:6379"

# Server
PORT=3000
NODE_ENV="development"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN="http://localhost:5173"

# DigitalOcean Spaces 配置 (文件上传必需)
# 获取方式: DigitalOcean控制台 -> API -> Spaces Keys
# ⚠️ 重要：SPACES_ENDPOINT 只需要域名，不要包含 bucket 名称，不要包含 https://
# ❌ 错误：https://app-together.nyc3.digitaloceanspaces.com 或 app-together.nyc3.digitaloceanspaces.com
# ✅ 正确：nyc3.digitaloceanspaces.com
SPACES_ENDPOINT="nyc3.digitaloceanspaces.com"
SPACES_REGION="nyc3"
SPACES_BUCKET="your-bucket-name"
SPACES_ACCESS_KEY_ID="your-access-key-id"
SPACES_SECRET_ACCESS_KEY="your-secret-access-key"

# CDN 配置 (可选，用于加速文件访问)
# ⚠️ CDN_ENDPOINT 需要包含 https:// 前缀
CDN_ENDPOINT="https://your-bucket-name.nyc3.cdn.digitaloceanspaces.com"

# Resend 邮件服务配置 (密码找回、通知邮件等)
# 获取方式: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM_DOMAIN="yourdomain.com"
EMAIL_FROM_NAME="ChallengeNo"
FRONTEND_URL="http://localhost:5173"
